---
const github: string = 'https://www.github.com/panesarpbx8/nxcoder';
---

<header>
  <nav class="container">
    <div class="logo">
      <a href="/">NXCODER</a>
    </div>
    <div class="menu"><i class="fa-solid fa-bars-staggered"></i></div>
    <div class="links">
      <div class="link">
        <a href="/blogs">Blogs</a>
      </div>
      <div class="link">
        <a href="/hashtags">Hashtags</a>
      </div>
      <a href={github} target="_blank">
        <i class="fa-brands fa-github"></i>
      </a>
      <theme-switcher></theme-switcher>
      <a href="/search">
        <i class="fa-solid fa-magnifying-glass"></i>
      </a>
      <allow-if level="logged">
        <a href="/dashboard">
          <user-data field="photoURL"></user-data>
        </a>
        <div slot="else">
          <a href="/login">
            <i class="fa-solid fa-user-astronaut"></i>
          </a>
        </div>
      </allow-if>
    </div>
  </nav>
</header>

<style lang="scss">
header {
  background-color: var(--bgv);
  transition: background-color 200ms ease;
  box-shadow: var(--shadow);
  margin-bottom: 2.5rem;
  height: 4.5rem;
  position: sticky;
  top: 0;
  z-index: 5;
}

nav { 
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 1.5rem;
  height: 100%;
}

.logo {  
  color: var(--primary-color);
  font-size: 1.5rem;

  a {
    font-family: 'Aquire', 'Baloo Thambi 2', sans-serif;
  }
}

.menu { 
  display: block;
  i {
    color: var(--primary-color);
    font-size: 1.5rem;
  }
}

.links {
  display: none;
  align-items: center;
  gap: 2rem;

  .link {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  a:hover {
    color: var(--primary-dark);
  }
  
  .active {
    border-bottom: 2px solid var(--primary-color);
  }
  
  i {
    color: var(--primary-color);
    font-size: 1.5rem;

    &:hover {
      cursor: pointer;
      color: var(--primary-dark);
    }
  }
}

@media screen and (min-width: 768px) {
  .logo {
    font-size: 2rem;
  }
  
  .menu {
    display: none;
  }

  .links {
    display: flex;
  }
}
</style>