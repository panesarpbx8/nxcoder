---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogList from '../../components/blogs/BlogList.astro';
import Pagination from '../../components/Pagination.astro';
import { Blog } from '../../util/blog';

export async function getStaticPaths({ paginate }) {
  let blogs: Blog[] = await Astro.glob('./*.md');

  blogs = blogs.sort((a, b) => {
    return new Date(b.frontmatter.createdAt).getTime() - new Date(a.frontmatter.createdAt).getTime();
  });

  return paginate(blogs, { pageSize: 6 });
}

const { page } = Astro.props;

let blogs: Blog[] = page.data;

---

<BaseLayout>
  <h1 class="page-heading">Quick Blogs</h1>

  <BlogList blogs={blogs}></BlogList>

  <Pagination page={page}></Pagination>

</BaseLayout>
