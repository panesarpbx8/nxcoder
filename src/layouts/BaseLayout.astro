---
import BaseHead from '../components/BaseHead.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Hotroute from '../components/Hotroute.astro';

let title: string = Astro.props['title'] || 'nxcoder';
let description: string = Astro.props['description'] || 'Next generation coding tutorials';
let permalink: string = Astro.props['permalink'] || 'https://nxcoder.vercel.app/';
let image: string = Astro.props['image'] || '';
---

<html lang="en">
	<BaseHead title={title} description={description} permalink={permalink} image={image}/>
	<body>
		<Hotroute client:load />
		<Navbar/>
    <main class="container">
      <slot/>
    </main>
		<Footer/>
	</body>
</html>

<style>
main {
	margin-bottom: 5rem;
}
</style>
